

sentence = input("Please Enter your text here: ").lower()
letters = []

letters.append(input("Enter a letter. We will count how many times it appears in your sentence: ").lower())
letters.append(input("Enter another letter. We will count how many times it appears in your sentence: ").lower())
letters.append(input("Enter a third letter. We will count how many times it appears in your sentence: ").lower())

print("\n")
print("LETTR COUNT")
letter_count1 = sentence.count(letters[0])
letter_count2 = sentence.count(letters[1])
letter_count3 = sentence.count(letters[2])
print(f"We found that the letter '{letters[0]}' appears {letter_count1} times")
print(f"We found that the letter '{letters[1]}' appears {letter_count2} times")
print(f"We found that the letter '{letters[2]}' appears {letter_count3} times")

print("\n")
print("FIRST AND LAST LETTER")
words = sentence.split()
first_letter = sentence[0]
last_letter = sentence[-1]

print(f"The first letter of your sentence is '{first_letter}'. \n"
      f"The last letter of your sentence is '{last_letter}'")

print("\n")
print("REVRSE SENTENCE")
words.reverse()
sentence_in_reverse = " ".join(words)
print(f"If we wrote your sentence in reverse, it would look like this: \n"
      f"'{sentence_in_reverse}'")

print("\n")
print("FIND THE WORD SAMOSA")
if 'samosa' in sentence:
    print("The word 'samosa' appears in your sentence.")
else:
    print("There is no mention of the word 'samosa' in your sentence")

