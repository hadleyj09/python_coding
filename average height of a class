student_heights = input("List all heights of students here: ").split(", ")

total_height = 0

for h in student_heights:
  total_height += int(h)
print(total_height)

num_of_students = 0 
for student in student_heights:
  num_of_students += 1
print(num_of_students) 

average_height = round(total_height/num_of_students)
print(average_height)

------------

class_heights = input("Please Enter All Heights of Students In The Class: ").split(", ")

total_height = 0

for height in class_heights:
  total_height += int(height)
print(total_height)

num_of_students = 0

for student in class_heights:
  num_of_students += 1
print(num_of_students)

average_height = round(total_height/num_of_students)
print(average_height)
